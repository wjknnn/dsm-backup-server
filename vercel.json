{
  "version": 2,
  "builds": [
    {
      "src": "src/main.ts",
      "use": "@vercel/node"
    },
    {
      "src": "public/api/docs/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/docs/(.*)",
      "dest": "/public/api/docs/$1"
    },
    {
      "src": "/(.*)",
      "dest": "src/main.ts",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    }
  ]
}
